{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "max-classes-per-file": [
            false
        ],
        "no-console": [
            false
        ],
        "arrow-parens": [
            false
        ],
        "no-angle-bracket-type-assertion": false,
        "object-literal-sort-keys": false,
        "array-type": [
            true,
            "array"
        ],
        "interface-name": [
            false
        ],
        "max-line-length": [
            false
        ],
        "indent": [
            true,
            "spaces",
            4
        ]
    }
}